<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
<% else %>
  <!-- Background Hero Section -->
  <div class="container bg-overlay p-5 text-white text-center"
    style="background: url('/bg.png') no-repeat center center; background-size: cover; min-height: 300px;">
    <h2>Welcome to the Photo Management App!</h2>
    <p class="lead">
      You'll love managing your photos with our application. Sign up!
    </p>
  </div>

  <!-- Plans Section -->
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card text-center p-4 shadow">
          <h2>Premium Plan</h2>
          <div class="price">
            <strong>Price: $10</strong>
          </div>
          <div class="features">
            <ul class="list-unstyled">
              <li>✅ Unlimited Image Uploads</li>
              <li>✅ Responsive design</li>
              <li>✅ Access anywhere</li>
            </ul>
          </div>
          <p>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
          </p>
        </div>
      </div>

      <div class="col-md-6 col-lg-4">
        <div class="card text-center p-4 shadow">
          <h2>Amaze Plan</h2>
          <div class="price">
            <strong>Price: $20</strong>
          </div>
          <div class="features">
            <ul class="list-unstyled">
              <li>✅ Unlimited Image Uploads</li>
              <li>✅ Responsive design</li>
              <li>✅ Access anywhere</li>
              <li>✨ Unlimited projects</li>
            </ul>
          </div>
          <p>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
